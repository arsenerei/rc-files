startup_message off
vbell off

activity "Activity in %n (%t)~"

# information bar
hardstatus alwayslastline
hardstatus string "%{Kg}[%w] %=[%H]"

# binds
bind q quit
bind a title

# buffers appear in alternative screen
altscreen on

# 5000 line buffer
defscrollback 5000

# Defines the time a message is displayed
msgwait 1
